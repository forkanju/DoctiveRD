<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pal.doctive.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8" />
    </FrameLayout>



    <TextView

        android:id="@+id/gender_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_count"
        android:layout_marginTop="@dimen/_195sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="Do you have diabetes?"
        android:textColor="@color/txt_color_white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/gender_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_query"
        android:layout_marginLeft="@dimen/_65sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_45sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/diabetes_yes"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:background="@drawable/round_btn_bg"
            android:fontFamily="@font/quicksandbold"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/diabetes_no"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/round_btn_bg"
            android:fontFamily="@font/quicksandbold"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="22sp" />


    </LinearLayout>


</RelativeLayout>
