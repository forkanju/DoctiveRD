<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pal.doctive.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8" />
    </FrameLayout>


    <TextView
        android:id="@+id/gender_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_count"
        android:layout_marginTop="@dimen/_195sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="How tall you are?"
        android:textColor="@color/txt_color_white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/age_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_query"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp">

        <ImageButton
            android:id="@+id/height_minus"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:background="@drawable/round_btn_bg"
            android:fontFamily="@font/quicksandbold"
            android:src="@drawable/ic_remove"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/Theme.AppCompat"
            android:id="@+id/height_textInputLayout"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_height"
                android:layout_width="@dimen/_88sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/_15sdp"
                android:text="180"
                android:textColor="@color/txt_color_white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>




        <ImageButton
            android:id="@+id/height_plus"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/round_btn_bg"
            android:fontFamily="@font/quicksandbold"
            android:src="@drawable/ic_add"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_layout"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="cm/ "
            android:textColor="@color/txt_color_white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="ft*in"
            android:textColor="@color/txt_color_white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/height_nxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="Next"
        android:textColor="@color/txt_color_white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/back_from_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_back" />


</RelativeLayout>
