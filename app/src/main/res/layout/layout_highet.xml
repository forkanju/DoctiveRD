<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pal.doctiverd.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/workout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@drawable/whole_screen_gradient"></LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/doctive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="@string/second_doctive_txt"
        android:textColor="@color/txt_color_white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/page_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctive"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="04 of 08"
        android:textColor="@color/txt_color_white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gender_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_count"
        android:layout_marginTop="@dimen/_135sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="How tall you are?"
        android:textColor="@color/txt_color_white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/age_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_query"
        android:layout_marginLeft="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_55sdp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/age_minus"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:background="@drawable/round_btn_bg"
            android:fontFamily="@font/quicksandbold"
            android:src="@drawable/ic_remove"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

        <EditText
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="5 ft 9 in"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/age_plus"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:background="@drawable/round_btn_bg"
            android:fontFamily="@font/quicksandbold"
            android:src="@drawable/ic_add"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_layout"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="cm/ "
            android:textColor="@color/txt_color_white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="ft*in"
            android:textColor="@color/txt_color_white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>