<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pal.doctive.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8" />
    </FrameLayout>


    <TextView

        android:id="@+id/gender_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_count"
        android:layout_marginTop="@dimen/_195sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="Whats your goal?"
        android:textColor="@color/txt_color_white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/gender_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_query"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <Button
            android:id="@+id/lose_fat"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/login_button_bk"
            android:fontFamily="@font/quicksandbold"
            android:padding="@dimen/_3sdp"
            android:text="Lose fat"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/get_fitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/login_button_bk"
            android:fontFamily="@font/quicksandbold"
            android:padding="@dimen/_3sdp"
            android:text="Get fitter"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/gain_muscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/login_button_bk"
            android:fontFamily="@font/quicksandbold"
            android:padding="@dimen/_3sdp"
            android:text="Gain muscle"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/back_from_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_back" />


</RelativeLayout>
