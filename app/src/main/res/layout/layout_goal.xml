<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pal.doctive.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/workout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@drawable/whole_screen_gradient"></LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/doctive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="@string/second_doctive_txt"
        android:textColor="@color/txt_color_white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/page_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctive"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="02 of 08"
        android:textColor="@color/txt_color_white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/gender_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_count"
        android:layout_marginTop="@dimen/_135sdp"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:text="Whats your goal?"
        android:textColor="@color/txt_color_white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_query"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:orientation="vertical">

        <Button
            android:id="@+id/lose_fat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_button_bk"
            android:fontFamily="@font/quicksandbold"
            android:text="Lose fat"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

        <Button
            android:layout_marginTop="@dimen/_12sdp"
            android:id="@+id/get_fitter"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_button_bk"
            android:fontFamily="@font/quicksandbold"
            android:text="Get fitter"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />

        <Button
            android:layout_marginTop="@dimen/_12sdp"
            android:id="@+id/gain_muscle"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_button_bk"
            android:fontFamily="@font/quicksandbold"
            android:text="Gain muscle"
            android:textColor="@color/txt_color_white"
            android:textSize="18sp" />


    </LinearLayout>


</RelativeLayout>
